<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.siddhi.numberprediction">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/number_prediction_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/number_prediction_app_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".InfoActivity"
            android:launchMode="singleTask"
            android:resizeableActivity="false"
            android:screenOrientation="portrait"/>
        <activity android:name=".HelpActivity"
            android:launchMode="singleTask"
            android:resizeableActivity="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HardActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:resizeableActivity="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NormalActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:resizeableActivity="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChooseActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:resizeableActivity="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyRecordsActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:resizeableActivity="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EasyActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:resizeableActivity="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|screenSize"
            android:resizeableActivity="false"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:resizeableActivity="false"
            android:screenOrientation="portrait" />
    </application>

</manifest>